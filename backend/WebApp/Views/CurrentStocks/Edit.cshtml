@model WebApp.ViewModels.CurrentStockCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CurrentStock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentStock.Quantity" class="control-label"></label>
                <input asp-for="CurrentStock.Quantity" class="form-control" />
                <span asp-validation-for="CurrentStock.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentStock.UpdatedAt" class="control-label"></label>
                <input asp-for="CurrentStock.UpdatedAt" class="form-control" />
                <span asp-validation-for="CurrentStock.UpdatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentStock.ProductId" class="control-label"></label>
                <select asp-for="CurrentStock.ProductId" class="form-control" asp-items="Model.ProductSelectList"></select>
                <span asp-validation-for="CurrentStock.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentStock.StorageRoomId" class="control-label"></label>
                <select asp-for="CurrentStock.StorageRoomId" class="form-control" asp-items="Model.StorageRoomSelectList"></select>
                <span asp-validation-for="CurrentStock.StorageRoomId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CurrentStock.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
